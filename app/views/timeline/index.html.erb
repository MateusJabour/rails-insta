<div class="timeline">
  <div class="timeline__photos-list">
    <% if @photos.length != 0 %>
      <% for photo in @photos.sort_by { |photo| photo.created_at }.reverse %>
        <div class="single-photo timeline__single-photo" id="<%= "single-photo-#{photo.id}" %>">
          <div class="timeline__photo-container">
            <%= image_tag photo.image.url(:large), class: 'timeline__photo', alt: photo.id %>
          </div>
          <%= render 'application/information_section', photo: photo %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
