<div class="timeline">
  <div class="timeline__photos-list">
    <% if @photos.length != 0 %>
      <% for photo in @photos %>
      <div class="timeline__single-photo">
        <div class="timeline__photo-avatar">
          <%= link_to image_tag(photo.user.avatar.url(:thumb), class: 'timeline__photo-avatar-picture'), user_page_path(photo.user) %>
          <%= link_to photo.user.username, user_page_path(photo.user) %>
        </div>

        <div class="timeline__photo-container">
          <%= image_tag photo.image.url(:large), class: 'timeline__photo' %>
        </div>

        <div class="timeline__photo-user-interaction">
          <div class="photo-page__interation">
            <%= button_to '<3', like_photo_path(photo), class: 'timeline__photo-like-button' %>
            <p class="timeline__photo-like-count"><%= photo.likes.count %> likes</p>
          </div>
        </div>

        <div class="timeline__photo-comment-box">
          <ul class="timeline__photo-comment-list">
            <li class="timeline__photo-single-comment">
              <h1>
                <%= link_to photo.user.username, user_page_path(photo.user), class: 'timeline__photo-comment-username' %>
                <span class="timeline__photo-comment-text">
                  <%= photo.description%>
                </span>
              </h1>
            </li>
            <% for comment in photo.comments %>
            <li class="timeline__photo-single-comment">
              <h1>
                <%= link_to comment.user.username, user_page_path(comment.user.id), class: 'timeline__photo-comment-username' %>
                <span class="timeline__photo-comment-text">
                  <%= comment.text %>
                </span>
              </h1>
            </li>
            <% end %>
          </ul>
          <%= render 'comment/form', photo: photo %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
