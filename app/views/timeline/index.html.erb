<div class="timeline">
  <h2 class="visually-hidden">Timeline</h2>
  <div class="timeline__photos-list">
    <% if @photos.length != 0 %>
      <% for photo in @photos.sort_by { |photo| photo.created_at }.reverse %>
        <article class="single-photo timeline__single-photo" id="<%= "single-photo-#{photo.id}" %>" aria-label="<%= "Photo from #{photo.user.username}" %>">
          <div class="photo-container">
            <%= image_tag photo.image.url(:large), class: 'photo', alt: photo.id %>
          </div>
          <%= render 'photo/information_section', photo: photo %>
        </article>
      <% end %>
    <% end %>
  </div>
</div>
