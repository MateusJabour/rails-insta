<h1 class="visually-hidden">Instagram</h1>
<h2 class="visually-hidden">Signup</h2>

<section class="form__container form__container--signup" role="region" aria-label="Signup">
  <%= image_tag "written_insta.png", class: "form__title" %>

  <%= form_for @user,
    url: signup_path,
    html: {
      aria: { live: 'polite' },
      data: { signup_form: '' }
    } do |f| %>
    <fieldset>
      <legend class="visually-hidden">Signup to instagram</legend>

      <%= f.label :username, class: 'visually-hidden' %>
      <%= f.text_field :username, placeholder: 'Username', class: "form__field" %>
      <%= f.label :email, class: 'visually-hidden' %>
      <%= f.email_field :email, placeholder: 'Email', class: "form__field" %>
      <%= f.label :password, class: 'visually-hidden' %>
      <%= f.password_field :password, placeholder: 'Password', class: "form__field" %>
      <%= f.label :password_confirmation, class: 'visually-hidden' %>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm your password', class: "form__field" %>

      <%= f.submit "Sign up", class: "form__submit-button" %>
      <div class="form__error"></div>
    </fieldset>
  <% end %>
</section>

<aside class="form__helper">
    <p>
      If you already have an account, <%= link_to 'Log in', root_path, class: "link" %>
    </p>
</aside>
