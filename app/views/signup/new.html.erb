<h2>Instagram</h2>
<%= render 'form_errors', record: @user %>

<%= form_for @user, url: signup_path do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>

  <%= f.submit %>
<% end %>

<p>
  If you already have an account, <%= link_to 'Log in', root_path %>
</p>
