<h2>Instagram</h2>
<%= form_tag login_path do %>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag 'Log in' %>
  </p>
<% end %>

<p>
  If you don't have an account, <%= link_to 'Sign up', signup_path %>
</p>
