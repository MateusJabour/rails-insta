<header>
  <span>Instagram</span>
  <ul>
    <% if logged_in? %>
      <%= image_tag current_user.avatar.url(:thumb) %>
      <%= button_to 'Log out', logout_path %>
    <% else %>
      <li>
        <%= link_to 'Sign up', signup_path  %>
      </li>
      <li>
        <%= link_to 'Log in', login_path  %>
      </li>
    <% end %>
  </ul>
</header>
